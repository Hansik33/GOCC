<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GOCC.View.DataFormPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start" >
            <Label Text="Uzupełnij swoje dane:" 
                   FontSize="Title" 
                   TextColor="Black" 
                   HorizontalOptions="Center" 
                   Margin="0,20,0,10" 
                   FontAttributes="Bold"/>
            <Entry x:Name="FirstName" 
                TextChanged="CheckCorrectnessRegex"
                Keyboard="Text"
                ClearButtonVisibility="WhileEditing"
                Margin="3"
                HorizontalOptions="Center"
                WidthRequest="270"
                PlaceholderColor="Black"
                Placeholder="Imię" />
            <Entry x:Name="LastName"  
                TextChanged="CheckCorrectnessRegex"
                Keyboard="Text"
                ClearButtonVisibility="WhileEditing"
                Margin="3"
                HorizontalOptions="Center"
                WidthRequest="270"
                PlaceholderColor="Black"
                Placeholder="Nazwisko" />
            <Entry x:Name="PhoneNumber"  
                Keyboard="Numeric"
                MaxLength="9"
                ClearButtonVisibility="WhileEditing"
                Margin="3"
                HorizontalOptions="Center"
                WidthRequest="270"
                PlaceholderColor="Black"
                Placeholder="Numer telefonu" />
            <Entry x:Name="Email"  
                Keyboard="Email"
                ClearButtonVisibility="WhileEditing"
                Margin="3"
                HorizontalOptions="Center"
                WidthRequest="270"
                PlaceholderColor="Black"
                Placeholder="E-mail" />
            <Entry x:Name="Place" 
                TextChanged="CheckCorrectnessRegex"
                Keyboard="Text"
                ClearButtonVisibility="WhileEditing"
                Margin="3"
                HorizontalOptions="Center"
                WidthRequest="270"
                PlaceholderColor="Black"
                Placeholder="Miejscowość" />
            <DatePicker x:Name="Date"
                        Margin="5"
                        HorizontalOptions="Center"
                        WidthRequest="270"
                        MaximumDate="01.01.2021"/>
            <Label Text="Jaką dyscyplinę wybierasz?" HorizontalOptions="Center" Margin="5" FontAttributes="Bold" FontSize="16"/>
            <StackLayout Orientation="Vertical" HorizontalOptions="Center">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="45">
                    <Label Text="Bieganie" FontSize="16" />
                    <Label Text="Chodzenie" FontSize="16" />
                    <Label Text="Rowery" FontSize="16"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="70">
                    <CheckBox/>
                    <CheckBox/>
                    <CheckBox/>
                </StackLayout>
            </StackLayout>
            <Button x:Name="confrim_btn"
                    BackgroundColor="#e93636" 
                    Margin="0,20,0,0"
                    TextColor="White" 
                    Text="Zatwierdź" 
                    WidthRequest="350"  
                    HeightRequest="50" 
                    HorizontalOptions="Center"
                    CornerRadius="10"
                    Clicked="confrim_btn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>