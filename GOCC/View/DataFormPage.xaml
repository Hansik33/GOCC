<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GOCC.View.DataFormPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start" >
            <Label Text="Uzupełnij swoje dane:" 
                   FontSize="Title" 
                   TextColor="Black" 
                   HorizontalOptions="Center" 
                   Margin="0,20,0,10" 
                   FontAttributes="Bold"/>
            <Entry x:Name="FirstName" 
                TextChanged="CheckCorrectnessRegex"
                Keyboard="Text"
                ClearButtonVisibility="WhileEditing"
                Margin="5"
                HorizontalOptions="Center"
                WidthRequest="250"
                PlaceholderColor="Black"
                Placeholder="Imię" />
            <Entry x:Name="LastName"  
                TextChanged="CheckCorrectnessRegex"
                Keyboard="Text"
                ClearButtonVisibility="WhileEditing"
                Margin="5"
                HorizontalOptions="Center"
                WidthRequest="250"
                PlaceholderColor="Black"
                Placeholder="Nazwisko" />
            <Entry x:Name="Pesel"  
                Keyboard="Numeric"
                MaxLength="11"
                ClearButtonVisibility="WhileEditing"
                Margin="5"
                HorizontalOptions="Center"
                WidthRequest="250"
                PlaceholderColor="Black"
                Placeholder="Pesel" />
            <Entry x:Name="PhoneNumber"  
                Keyboard="Numeric"
                MaxLength="9"
                ClearButtonVisibility="WhileEditing"
                Margin="5"
                HorizontalOptions="Center"
                WidthRequest="250"
                PlaceholderColor="Black"
                Placeholder="Numer telefonu" />
            <Entry x:Name="Email"  
                Keyboard="Email"
                ClearButtonVisibility="WhileEditing"
                Margin="5"
                HorizontalOptions="Center"
                WidthRequest="250"
                PlaceholderColor="Black"
                Placeholder="E-mail" />
            <Entry x:Name="Place" 
                TextChanged="CheckCorrectnessRegex"
                Keyboard="Text"
                ClearButtonVisibility="WhileEditing"
                Margin="5"
                HorizontalOptions="Center"
                WidthRequest="250"
                PlaceholderColor="Black"
                Placeholder="Miejscowość" />
            <StackLayout Orientation="Vertical" 
                         HorizontalOptions="Center">
                <Label Text="Płeć:"
                       Margin="5"
                       TextColor="Black" 
                       FontSize="Large" 
                       HorizontalOptions="Center"/>
                <RadioButton Value="Male"
                    Content="Mężczyzna" />
                <RadioButton Value="Female"
                    Content="Kobieta" />
            </StackLayout>
            <Button BackgroundColor="#e93636" 
                    Margin="0,20,0,0"
                    TextColor="White" 
                    Text="Zatwierdź" 
                    WidthRequest="350"  
                    HeightRequest="50" 
                    HorizontalOptions="Center"
                    CornerRadius="10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>